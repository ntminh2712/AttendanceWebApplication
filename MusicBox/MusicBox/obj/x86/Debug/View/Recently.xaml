<Page x:ConnectionId='1'
    x:Class="MusicBox.View.Recently"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicBox.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entity="using:MusicBox.Entity"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView x:ConnectionId='2'                                                 >
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <StackPanel x:ConnectionId='3' Orientation="Horizontal" Tag="{Binding}"                    Margin="0,20,0,20" >
                        <Image x:ConnectionId='4'                             Width="150"/>
                        <TextBlock x:ConnectionId='5'                      Margin="50,20,0,0"/>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

